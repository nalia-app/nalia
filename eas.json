
{
  "cli": {
    "version": ">= 13.2.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "autoIncrement": true,
      "node": "lts",
      "ios": {
        "simulator": false,
        "buildConfiguration": "Debug",
        "image": "latest",
        "resourceClass": "m-medium"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "autoIncrement": true,
      "node": "lts",
      "ios": {
        "simulator": false,
        "buildConfiguration": "Release",
        "image": "latest",
        "resourceClass": "m-medium"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true,
      "node": "lts",
      "ios": {
        "simulator": false,
        "buildConfiguration": "Release",
        "image": "stable",
        "resourceClass": "m-medium"
      },
      "android": {
        "buildType": "app-bundle"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
